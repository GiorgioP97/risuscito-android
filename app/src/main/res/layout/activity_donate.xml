<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/risuscito_toolbar" />

    <RelativeLayout
        android:layout_marginTop="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_min_margin"
        android:paddingLeft="@dimen/activity_min_margin"
        android:paddingRight="@dimen/activity_min_margin"
        android:paddingTop="@dimen/activity_min_margin">

        <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/donateButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_donate"
            android:background="@drawable/img_donate_button" />

        <WebView android:id="@+id/donate_text"
            android:layout_above="@+id/donateButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


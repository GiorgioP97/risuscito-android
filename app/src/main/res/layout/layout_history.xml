<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:risuscito="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width= "match_parent"
        android:layout_height = "match_parent"
        android:id="@+id/history_recycler"
        android:scrollbars="vertical"
        android:fadeScrollbars="true" />

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/no_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/no_history_image"
            android:layout_centerHorizontal="true"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:src="@drawable/sad_history"/>

        <TextView
            android:id="@+id/no_history_text"
            android:layout_below="@id/no_history_image"
            android:layout_marginLeft="@dimen/text_min_margin"
            android:layout_marginRight="@dimen/text_min_margin"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="?android:textColorSecondary"
            android:layout_height="wrap_content"
            android:text="@string/history_empty"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_clear_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        risuscito:fab_colorNormal="@color/theme_accent"
        risuscito:fab_colorPressed="@color/theme_accent_dark"
        risuscito:fab_icon="@drawable/ic_eraser_white_24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/floating_margin_lateral"
        android:layout_marginBottom="@dimen/floating_margin_lateral_minus_shadow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?toolbar_shadow" />

</FrameLayout>

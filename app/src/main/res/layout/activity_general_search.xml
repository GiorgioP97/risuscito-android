    <io.karim.MaterialTabs
        android:id="@+id/material_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        risuscito:mtSameWeightTabs="false"
        risuscito:mtTextColorSelected="@android:color/white"
        android:textColor="#99FFFFFF"
        risuscito:mtMrlRippleColor="?attr/colorAccent"
        android:elevation="@dimen/toolbar_elevation"
        risuscito:mtMrlRippleDuration="500"
        risuscito:mtIndicatorColor="?attr/colorAccent"
        risuscito:mtIndicatorHeight="2dp"
        risuscito:mtPaddingMiddle="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--<android.support.v4.view.ViewPager-->

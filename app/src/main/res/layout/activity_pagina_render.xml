<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:risuscito="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pagina_render_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >

    <include layout="@layout/risuscito_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/music_controls"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material">

                <TextView
                    android:id="@+id/no_record"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:gravity="center"
                    android:padding="@dimen/activity_min_margin"
                    android:layout_height="match_parent"
                    android:text="@string/no_record" />

                <LinearLayout
                    android:id="@+id/music_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="50dip"
                        android:paddingLeft="@dimen/activity_min_margin"
                        android:paddingStart="@dimen/activity_min_margin"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat" />

                    <SeekBar
                        android:id="@+id/music_seekbar"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:maxHeight="1000dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"/>

                    <ImageButton
                        android:id="@+id/play_song"
                        android:layout_width="@dimen/abc_action_bar_default_height_material"
                        android:layout_height="@dimen/abc_action_bar_default_height_material"
                        android:paddingLeft="@dimen/button_playbar_padding"
                        android:paddingRight="@dimen/button_playbar_padding"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:background="?attr/customSelectorRoundAccent"
                        risuscito:srcCompat="@drawable/play_button_drawable"
                        android:soundEffectsEnabled="true"
                        tools:ignore="MissingPrefix" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_primary"
                android:divider="?attr/dividerVertical"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/slider_text"
                    android:layout_width="50dip"
                    android:paddingLeft="@dimen/activity_min_margin"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Inverse" />

                <SeekBar
                    android:id="@+id/speed_seekbar"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:maxHeight="1000dp"
                    android:max="100"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/play_scroll"
                    android:layout_width="@dimen/abc_action_bar_default_height_material"
                    android:layout_height="@dimen/abc_action_bar_default_height_material"
                    android:paddingLeft="@dimen/button_playbar_padding"
                    android:paddingRight="@dimen/button_playbar_padding"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:theme="@style/ActionBarThemeOverlay"
                    android:background="?attr/customSelectorRound"
                    risuscito:srcCompat="@drawable/play_scroll_button_drawable"
                    android:soundEffectsEnabled="true"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <WebView
                android:id="@+id/cantoView"
                android:layout_below="@id/music_controls"
                android:layout_alignWithParentIfMissing="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottom_bar"/>

        </RelativeLayout>

        <View
            android:id="@+id/outerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            tools:ignore="RtlSymmetry"
            android:elevation="@dimen/design_appbar_elevation" />

        <it.marbat.fabtoolbar.lib.FabToolbar
            android:id="@+id/fab_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/abc_action_bar_default_height_material"
            risuscito:tb_anim_duration="500"
            risuscito:tb_button_gravity="end"
            risuscito:tb_container_gravity="center"
            android:elevation="@dimen/design_fab_elevation" >

            <ImageButton
                android:id="@+id/fab_fullscreen_on"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:paddingLeft="@dimen/button_playbar_padding"
                android:paddingRight="@dimen/button_playbar_padding"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:theme="@style/ActionBarThemeOverlay"
                android:background="?attr/customSelectorRound"
                risuscito:srcCompat="@drawable/ic_fullscreen_48dp"
                android:soundEffectsEnabled="true" />

            <ImageButton
                android:id="@+id/fab_sound_off"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:paddingLeft="@dimen/button_playbar_padding"
                android:paddingRight="@dimen/button_playbar_padding"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:theme="@style/ActionBarThemeOverlay"
                android:background="?attr/customSelectorRound"
                risuscito:srcCompat="@drawable/hide_music_background"
                android:soundEffectsEnabled="true" />

            <ImageButton
                android:id="@+id/save_file"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:paddingLeft="@dimen/button_playbar_padding"
                android:paddingRight="@dimen/button_playbar_padding"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:theme="@style/ActionBarThemeOverlay"
                android:background="?attr/customSelectorRound"
                risuscito:srcCompat="@drawable/download_delete_button_drawable"
                android:soundEffectsEnabled="true" />

            <ImageButton
                android:id="@+id/fab_favorite"
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:paddingLeft="@dimen/button_playbar_padding"
                android:paddingRight="@dimen/button_playbar_padding"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:theme="@style/ActionBarThemeOverlay"
                android:background="?attr/customSelectorRound"
                risuscito:srcCompat="@drawable/fab_add_to_favorites"
                android:soundEffectsEnabled="true" />

        </it.marbat.fabtoolbar.lib.FabToolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?toolbar_shadow" />

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/myListPreferredItemHeightMedium"
    xmlns:risuscito="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<FrameLayout-->
        <!--android:id="@+id/drag_handle"-->
        <!--android:layout_width="32dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true">-->

        <ImageView
            android:id="@+id/drag_image"
            android:contentDescription="@string/content_drag"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            risuscito:ico_color="@color/icon_ative_black"
            risuscito:ico_icon="gmd-reorder"
            risuscito:ico_size="24dp"
            risuscito:ico_padding="2dp"
            android:layout_marginLeft="@dimen/myListPreferredItemMargin"
            android:layout_marginStart="@dimen/myListPreferredItemMargin"
            tools:ignore="MissingPrefix" />

        <!--</FrameLayout>-->

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/drag_image"
            android:textColor="#000000"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rear_left_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_color_red_600"
        android:visibility="gone">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/myListPreferredItemMargin"
            android:layout_marginStart="@dimen/myListPreferredItemMargin"
            risuscito:ico_color="@android:color/white"
            risuscito:ico_icon="cmd-delete"
            risuscito:ico_size="24dp"
            risuscito:ico_padding="2dp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rear_right_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_color_red_600"
        android:visibility="gone">

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/myListPreferredItemMargin"
            android:layout_marginRight="@dimen/myListPreferredItemMargin"
            risuscito:ico_color="@android:color/white"
            risuscito:ico_icon="cmd-delete"
            risuscito:ico_size="24dp"
            risuscito:ico_padding="2dp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>

</FrameLayout>